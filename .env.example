# =========================
# Environment
# =========================
# Set to "production" in your server to disable .env auto-loading
ENV=development

# =========================
# Database Configuration
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_SCHEMA=public
DB_MAX_OPEN_CON=10
DB_MAX_IDLE_CON=5

# =========================
# Logging Configuration
# =========================
# LOG_LEVEL can be: debug, info, warn, error
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=log/application/app.log
LOG_FILE_SIZE=50          # in MB
LOG_BACKUPS=5
LOG_AGE=30                # in days
LOG_COMPRESS=true
